<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="299.0" prefWidth="321.0" spacing="10" styleClass="rootVbox" stylesheets="/GUI/view/createEvent.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.CreateEvent">
    <children>
        <Label text="Event Name:" />
        <TextField fx:id="eventTypeField" promptText="Event Type">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin></TextField>
        <Label text="Event Location:" />
        <TextField fx:id="eventLocationField" promptText="Event Location" />
        <Label text="Start Date:" />
        <DatePicker fx:id="eventStartDatePicker" promptText="Start Date" />
      <CheckBox fx:id="assignToSelfChkBox" mnemonicParsing="false" text="Assign Event to Self" />
        <Label text="Event Time:" />
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Spinner fx:id="eventHourSpinner" initialValue="12" max="23" min="0" prefHeight="25.0" prefWidth="53.0" />
                <Label text=":" />
                <Spinner fx:id="eventMinuteSpinner" initialValue="30" max="59" min="0" prefHeight="25.0" prefWidth="57.0" />
            </children>
        </HBox>
        <Label text="End Date (Optional):" />
        <DatePicker fx:id="eventEndDatePicker" promptText="End Date (Optional)" />
        <Label text="Event Notes (Optional):" />
        <TextField fx:id="eventNotesField" promptText="Event Notes (Optional)" />
        <Label text="Directions (Optional):" />
        <TextField fx:id="locationGuidanceField" promptText="Directions (Optional)" />
      <HBox alignment="CENTER">
         <children>
            <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#closeWindow" text="Close">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
              <Button fx:id="addEvent" alignment="TOP_RIGHT" onAction="#addEvent" text="Add Event">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </HBox>
    </children>
</VBox>
