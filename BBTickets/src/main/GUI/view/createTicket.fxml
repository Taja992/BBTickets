<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="478.4" prefWidth="321.0" spacing="8.0" styleClass="mainBp" stylesheets="@ECDashboard.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.CreateTicketController">
   <children>
      <Label layoutX="128.0" layoutY="202.0" text="Who do you want to give this ticket to?">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <ListView fx:id="customerLv" prefHeight="290.0" prefWidth="322.0" styleClass="eventListLstV">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </ListView>
      <Label text="Price of ticket: (optional)" />
      <TextField fx:id="priceTxt" promptText="enter price here" styleClass="eventListLstV">
         <VBox.margin>
            <Insets left="30.0" right="30.0" />
         </VBox.margin>
      </TextField>
      <HBox alignment="CENTER">
         <children>
            <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#closeWindow" text="Close">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button alignment="TOP_RIGHT" onAction="#addTicket" text="Create ticket">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="4.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
