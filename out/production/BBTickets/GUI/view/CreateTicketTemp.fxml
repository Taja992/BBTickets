<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" prefHeight="478.4" prefWidth="321.0" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.CreateTicketController">
   <children>
      <Label text="Event Type (Optional):" />
      <TextField fx:id="eventTypeField" promptText="Event Type (Optional)" />
      <Label text="Customer ID:" />
      <TextField fx:id="customerIDField" promptText="Customer ID" />
      <Label text="Event ID:" />
      <TextField fx:id="eventIDField" promptText="Event ID" />
      <Label text="Price (Optional):" />
      <TextField fx:id="priceField" promptText="Price (Optional)" />
      <HBox alignment="CENTER">
         <children>
            <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#closeWindow" text="Close">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button alignment="TOP_RIGHT" onAction="#addTicket" text="Add Ticket">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
