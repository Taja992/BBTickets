<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="10" stylesheets="/GUI/view/AdminDashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.CreateUserController">
    <children>
        <Label text="Create/Edit User" />
        <HBox prefHeight="26.0" prefWidth="218.0" spacing="10">
            <children>
                <Label text="Role:" />
            <RadioButton fx:id="roleAdmin" mnemonicParsing="false" text="Admin">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="roleEC" mnemonicParsing="false" text="Event Coordinator" />
            </children>
         <VBox.margin>
            <Insets left="5.0" />
         </VBox.margin>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Username:" />
                <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="153.0" promptText="Enter Username" />
            </children>
         <VBox.margin>
            <Insets left="5.0" />
         </VBox.margin>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Password:" />
                <TextField fx:id="passwordField" prefHeight="26.0" prefWidth="158.0" promptText="Enter Password" />
            </children>
         <VBox.margin>
            <Insets left="5.0" />
         </VBox.margin>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button fx:id="createUserBtn" onAction="#createUser" text="Save" />
                <Button fx:id="cancelCreateUserBtn" onAction="#cancelCreateUser" text="Cancel" />
            </children>
        </HBox>
    </children>
</VBox>
